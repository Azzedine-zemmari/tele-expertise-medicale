<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence" version="2.2">
    <persistence-unit name="myPU">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <class>org.medicale.teleexpertisemedicale.model.Patient</class>
        <class>org.medicale.teleexpertisemedicale.model.ActMedical</class>
        <class>org.medicale.teleexpertisemedicale.model.Consultation</class>
        <class>org.medicale.teleexpertisemedicale.model.Creneu</class>
        <class>org.medicale.teleexpertisemedicale.model.DemandeExpertise</class>
        <class>org.medicale.teleexpertisemedicale.model.DossierMedical</class>
        <class>org.medicale.teleexpertisemedicale.model.Generalist</class>
        <class>org.medicale.teleexpertisemedicale.model.Infirmier</class>
        <class>org.medicale.teleexpertisemedicale.model.SigneVital</class>
        <class>org.medicale.teleexpertisemedicale.model.Specialiste</class>
        <class>org.medicale.teleexpertisemedicale.model.Utilisateur</class>

        <properties>
            <!-- Database connection -->
            <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/Medical"/>
            <property name="javax.persistence.jdbc.user" value="postgres"/>
            <property name="javax.persistence.jdbc.password" value="Azzedine2004"/>

            <!-- Hibernate config -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hibernate.use_sql_comments" value="true"/>
            <property name="hibernate.generate_statistics" value="true"/>
        </properties>
    </persistence-unit>
</persistence>
